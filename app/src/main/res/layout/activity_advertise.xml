<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdvertiseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nochatadvertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No chats!"
            android:textSize="20sp"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topconstraintadvertise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <me.itangqi.waveloadingview.WaveLoadingView
                android:id="@+id/waveloadingviewadvertise"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="@id/toplinearlayout2advertise"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:wlv_borderWidth="0dp"
                app:wlv_progressValue="80"
                app:wlv_round_rectangle="false"
                app:wlv_shapeType="square"
                app:wlv_triangle_direction="north"
                app:wlv_waveAmplitude="100"
                app:wlv_waveColor="@color/darkSkyBlue" />

            <LinearLayout
                android:id="@+id/toplinearlayout2advertise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Add Advertisement"
                    android:textColor="@color/white"
                    android:textSize="27sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/signuplinearlayoutactivityadvertise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_horizontal"
                    android:text="Contact us for any problem/complaint or advertisement.\nMob: +91 8210903928*****"
                    android:textColor="@color/primaryTextColor"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/textInputPassword12265activityadvertise"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTextCategoryactivityadvertise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="EdittextListenersactivityadvertise"
                        android:tag="category"
                        android:text="Category"
                        android:textColor="@color/greyishblue"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="0dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textInputPassword1224activityadvertise"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTextdistrict_activityadvertise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="EdittextListenersactivityadvertise"
                        android:tag="district"
                        android:text="State"
                        android:textColor="@color/greyishblue"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="0dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textInputPassword1225activityadvertise"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTextvillage_activityadvertise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="EdittextListenersactivityadvertise"
                        android:tag="village"
                        android:text="District"
                        android:textColor="@color/greyishblue"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="0dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textInputPassword1226activityadvertise"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTextWard_activityadvertise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="EdittextListenersactivityadvertise"
                        android:tag="ward"
                        android:text="Village / Ward"
                        android:textColor="@color/greyishblue"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="0dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textInputPassword12266activityadvertise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/editTextCaption_activityadvertise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="EdittextListenersactivityadvertise"
                        android:tag="caption"
                        android:text="Select caption"
                        android:textColor="@color/greyishblue"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="0dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                </LinearLayout>

                <EditText
                    android:id="@+id/numberEdittextactivityadvertise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your Vehicle No"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyishblue"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/chooseFileBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose file"
                        android:textAllCaps="false"
                        android:textColor="@color/greyishblue"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/fileChoosenDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No file choosen"
                        android:textColor="@color/greyishblue"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:gravity="start"
                    android:tag="getLocation"
                    android:text="Is this your Complaint/Problem?"
                    android:textColor="@color/greyishblue"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/textGetLocationLayoutactivityadvertise"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textviewGetlocation_activityadvertise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="EdittextListenersactivityadvertise"
                        android:tag="complaint"
                        android:text="NO"
                        android:textColor="@color/greyishblue"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="0dp" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24" />

                </LinearLayout>

                <Button
                    android:id="@+id/cirUploadDetailsBtn_activityadvertise"
                    style="@style/loginButton"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="Submit" />


            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center_horizontal"
        android:text="It's better to be safety conscious than unsafe and unconscious"
        android:textSize="20sp"
        android:visibility="gone" />

</LinearLayout>