<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.daimajia.slider.library.SliderLayout
        android:layout_width="match_parent"
        android:id="@+id/sliderLayout_fragamenthome"
        android:layout_height="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/loginButton"
            android:id="@+id/chatbtnfragmenthome"
            android:layout_height="wrap_content"
            android:text="chat"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/loginButton"
            android:id="@+id/infobtnfragmenthome"
            android:layout_height="wrap_content"
            android:text="Info"/>

        <Button
            android:layout_width="0dp"
            android:id="@+id/advertisebtnfragmenthome"
            android:layout_weight="1"
            style="@style/loginButton"
            android:layout_height="wrap_content"
            android:text="advertise"/>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        style="@style/loginButtonBlue"
        android:id="@+id/publicpollfragmenthome"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:text="public poll"/>

</LinearLayout>